{
  "manifest_version": 3,
  "name": "Research Platform",
  "version": "2.0.0",
  "description": "Document and analyze records for any research project with dynamic forms, quote management, and AI-powered analysis.",
  
  "permissions": [
    "activeTab",
    "storage",
    "contextMenus",
    "sidePanel",
    "scripting"
  ],
  
  "host_permissions": [
    "https://*.vercel.app/*",
    "http://localhost:*/*",
    "<all_urls>"
  ],
  
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  
  "action": {
    "default_title": "Open Research Platform"
}
}
